<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <div class='search_form'>
     <ul class='lists-left'>
      <li class='list'><%= link_to '名前で検索する', class: "name-list" %></li>
      <li class='list'><%= link_to 'カテゴリーで検索する', class: "category-list" %></li>
    </ul>
      <%= form_with(url: search_name_items_path, local: true, method: :get, class: "search-form-name" ) do |form| %>
      <%= form.text_field :keyword, placeholder: "商品名で検索する", class: 'input-box-name' %>
      <%= image_submit_tag("search.png", class: "search-button") %>
      <% end %>
      <%= form_with(url: search_category_items_path, local: true, method: :get, class: "search-form-category hidden" ) do |form| %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"input-box-category", id:"item-category"}) %>
      <%= image_submit_tag("search.png", class: "search-button") %>
      <% end %>
    </div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>